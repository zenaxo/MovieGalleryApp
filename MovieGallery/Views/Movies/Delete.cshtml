@model Movie

@{
    ViewData["Title"] = "Delete";
}
<div class="delete-container" style="margin-top: 20px;">
    <h3>Are you sure you want to delete this movie?</h3>
    <div>
        <h4>@Model.Title</h4>
        <img src="~/images/@Model.MovieImage" style="height:400px; margin-bottom: 30px;" />
        <div>
            <form asp-action="ConfirmDelete" asp-route-id="@Model.MovieID" method="post">
                @Html.AntiForgeryToken()
                <div>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
