@model MovieGallery.Models.Movie

@{
    ViewData["Title"] = "Create";
    ViewData["Description"] = "Create a new movie";
    ViewData["Keywords"] = "Movies, movie rating, movie bank, movie gallery, create movie";
    ViewData["MovieTitle"] = "New movie";
    ViewData["MovieUrl"] = $"{GlobalVariables.PageUrl}/Movies";
}
<h1 class="text-danger">@ViewBag.Error</h1>
<link rel="stylesheet" href="~/css/formstyle.css" asp-append-version="true" />
<h2 style="margin-top:20px;">Create Movie</h2>
<div class="text-danger" id="validationMessages">
    <ul></ul>
</div>

<form enctype="multipart/form-data" id="postForm">
    <div class="form-group mb-2">
        <h3 class="mt-3">Movie details</h3>
        <label for="titleInput">Title</label>
        <input class="form-control required" id="titleInput"   />
    </div>
    <div class="form-group mb-2">
        <label for="genreInput">Genre</label>
        <select class="form-control required" id="genreInput">
            <option value="">Select Genre</option>
            @foreach (var genre in GlobalVariables.Genres)
            {
                <option value="@genre">@genre</option>
            }
        </select>
    </div>
    <div class="form-group mb-2">
        <label for="releaseDateInput">Release date</label>
        <input class="form-control required" type="date" id="releaseDateInput" required />
    </div>
    <div class="form-group mb-2">
        <label for="imageFileInput">Cover Image</label>
        <input type="file" class="form-control required" id="imageFileInput" accept="image/*" required />
    </div>
    <div class="form-group mb-2">
        <label for="backgroundFileInput">Background image</label>
        <input type="file" class="form-control required" id="backgroundFileInput" accept="image/*" required />
    </div>
    <div class="form-group mb-2">
        <label for="movieDescriptionInput">Movie description</label>
        <textarea class="form-control required" id="movieDescriptionInput" maxlength="200" required></textarea>
    </div>
    <div class="form-group mb-2">
        <h3 class="mt-3">Add ratings (Demo purpose)</h3>
        <label for="numRatingsInput">Number of Ratings</label>
        <input type="number" step="1" min="0" name="numRatings" class="form-control required" value="0" id="numRatingsInput" />
    </div>
    <div class="form-group mb-2">
        <label for="ratingValueInput">Rating Value</label>
        <select class="form-control required" id="ratingValueInput">
            @foreach (var option in GlobalVariables.RatingValues)
            {
                <option value="@option">@option</option>
            }
        </select>
    </div>
    <div class="form-group mb-2">
        <h3 class="mt-3">Producers</h3>
        <div class="producers-container delete-buttons-container">
            <p class="text-danger m-0" id="pValidationText">

            </p>
            @*Will be populated with delete buttons for the producers with JS*@
        </div>
        <label for="pFirstName">
            First name
         </label>
        <input class="form-control" id="pFirstName" maxlength="16" pattern="[A-Za-z]+" />
        <label for="pLastName">
            Last name
        </label>
        <input class="form-control" id="pLastName" maxlength="16" pattern="[A-Za-z]+" />
        <button id="addProducerBtn" type="button" class="btn btn-primary producer-btn mt-3">
            Add Producer
        </button>
    </div>
    <div class="form-group mb-2">
        <h3 class="mt-3">Actors</h3>
        <div class="actors-container delete-buttons-container">
            <p class="text-danger m-0" id="aValidationText">

            </p>
            @*Will be populated with delete buttons for the actors with JS*@
        </div>
        <label for="aFirstName">
            First name
        </label>
        <input class="form-control" id="aFirstName" maxlength="16" pattern="[A-Za-z]+" />
        <label for="aLastName">
            Last name
        </label>
        <input class="form-control" id="aLastName" maxlength="16" pattern="[A-Za-z]+" />
        <button id="addActorBtn" type="button" class="btn btn-primary producer-btn mt-3">
            Add Actor
        </button>
    </div>
    <button type="submit" class="btn btn-primary submit-button" id="submitBtn" style="margin-top: 20px;">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/createMovie.js"></script>
}
