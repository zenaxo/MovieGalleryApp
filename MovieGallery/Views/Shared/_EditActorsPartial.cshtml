@model Movie
<div class="actors-edit-container">
    <h3 style="margin-top:20px;">Actors</h3>

    <div class="delete-buttons-container">
        @foreach (var actor in Model.Actors)
        {
            <button class="btn btn-danger actor-delete-btn"
                    data-actor-id="@actor.ActorId"
                    data-movie-id="@Model.MovieID">
                Remove @actor.FirstName @actor.LastName
            </button>
        }
    </div>
    <p id="actorValidationContainer" class="text-danger"></p>
    <div class="add-actors-container">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input id="ActorFirstName" class="form-control" type="text" />
            <span class="text-danger" id="ActorFirstNameValidation"></span>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input id="ActorLastName" class="form-control" type="text" />
            <span class="text-danger" id="ActorLastNameValidation"></span>
        </div>
        <button class="btn btn-primary producer-btn add-actor-btn" data-movie-id="@Model.MovieID" style="margin-top:20px;">
            Add Actor
        </button>
    </div>
</div>
