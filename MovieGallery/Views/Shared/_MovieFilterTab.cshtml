@model MoviesViewModel
<form asp-controller="Movies" asp-action="Index" method="get" class="filter-options">
    <div class="form-check form-check-lg sort-by-ratings">
        <input type="checkbox" name="isSortedByAverageRating" id="isSortedByAverageRating" value="true" class="form-check-input" @(Model.IsSortedByAverageRating ? "checked" : "")>
        <label for="isSortedByAverageRating" class="form-check-label">Sort by Ratings</label>
    </div>
    <div class="form-group genre-filter">
        <select id="genreFilter" asp-for="FilterOption" class="form-select" aria-label="Default select example">
            <option value="All">All Genres</option>
            @foreach (var genre in GlobalVariables.Genres)
            {
                <option value="@genre">@genre</option>
            }
        </select>
    </div>
    <button type="button" class="btn btn-primary filter-button" onclick="applyGenreFilter()">Apply</button>
</form>
